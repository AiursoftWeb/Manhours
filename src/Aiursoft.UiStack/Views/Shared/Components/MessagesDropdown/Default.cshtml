@using Aiursoft.WebTools
@model Aiursoft.UiStack.Views.Shared.Components.MessagesDropdown.MessagesDropdownViewModel

<li class="nav-item dropdown">
    <a class="nav-icon dropdown-toggle" href="#" id="messagesDropdown" data-bs-toggle="dropdown">
        <div class="position-relative">
            <i class="align-middle text-body" data-lucide="message-circle"></i>
            <span class="indicator">@Model.Messages.Length</span>
        </div>
    </a>
    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-end py-0" aria-labelledby="messagesDropdown">
        <div class="dropdown-menu-header">
            <div class="position-relative">
                @Model.Messages.Length New Messages
            </div>
        </div>
        <div class="list-group">
            @foreach (var message in Model.Messages)
            {
                <a href="@message.ClickableLink" class="list-group-item">
                    <div class="row g-0 align-items-center">
                        <div class="col-2">
                            <img src="@message.SenderAvatarUrl" class="img-fluid rounded-circle" alt="@message.SenderName" width="40" height="40">
                        </div>
                        <div class="col-10 ps-2">
                            <div>@message.SenderName</div>
                            <div class="text-muted small mt-1">@message.LatestMessagePreview</div>
                            <div class="text-muted small mt-1" data-utc-time="@message.LatestMessageTime.ToHtmlDateTime()"></div>
                        </div>
                    </div>
                </a>
            }
        </div>
        <div class="dropdown-menu-footer">
            <a href="@Model.ViewAllLink.Href" class="text-muted">@Model.ViewAllLink.Text</a>
        </div>
    </div>
</li>