@model Aiursoft.ManHours.Models.BadgeViewModels.RenderRepoViewModel
@using System.Security.Cryptography
@using System.Text
@functions {
    public static string GetMd5Hash(string input)
    {
        using var md5 = MD5.Create();
        var inputBytes = Encoding.ASCII.GetBytes(input);
        var hashBytes = md5.ComputeHash(inputBytes);
        return Convert.ToHexString(hashBytes).ToLower();
    }
}
@{
    var totalHours = Model.Stats.TotalWorkTime.TotalHours;
    var currentUserStat = Model.Stats.Contributors.FirstOrDefault(c => string.Equals(c.Email, Model.CurrentUserEmail, StringComparison.OrdinalIgnoreCase));
    var currentUserRank = Model.Stats.Contributors.IndexOf(currentUserStat) + 1;

    var totalContributors = Model.Stats.Contributors.Count;
    var averageHours = totalContributors > 0 ? totalHours / totalContributors : 0;
    double stdDev = 0;
    if (totalContributors > 0)
    {
        var sumOfSquares = Model.Stats.Contributors.Sum(c => Math.Pow(c.WorkTime.TotalHours - averageHours, 2));
        stdDev = Math.Sqrt(sumOfSquares / totalContributors);
    }
}

<div class="container-fluid p-0">

    <h1 class="h3 mb-3">@Model.PageTitle</h1>

    <div class="row">
        <div class="col-md-4 col-xl-3">
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="card-title mb-0">@Localizer["Repository Stats"]</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-1">
                            <span class="fas fa-users fa-fw me-1"></span> @Localizer["Contributors"]: <strong>@totalContributors</strong>
                        </li>
                        <li class="mb-1">
                            <span class="fas fa-clock fa-fw me-1"></span> @Localizer["Total Hours"]: <strong>@totalHours.ToString("N1")</strong>
                        </li>
                        <li class="mb-1">
                            <span class="fas fa-calculator fa-fw me-1"></span> @Localizer["Average Hours"]: <strong>@averageHours.ToString("N1")</strong>
                        </li>
                        <li class="mb-1">
                            <span class="fas fa-chart-bar fa-fw me-1"></span> @Localizer["Std Dev"]: <strong>@stdDev.ToString("N1")</strong>
                        </li>
                    </ul>
                </div>
            </div>

            @if (currentUserStat != null)
            {
                    <div class="card mb-3">
                        <div class="card-header">
                            <h5 class="card-title mb-0">@Localizer["My Stats"]</h5>
                        </div>
                        <div class="card-body text-center">
                            <img src="@($"https://www.gravatar.com/avatar/{GetMd5Hash(currentUserStat.Email)}?d=identicon")" alt="@currentUserStat.Name" class="img-fluid rounded-circle mb-2" width="128" height="128" />
                            <h5 class="card-title mb-0">@currentUserStat.Name</h5>
                            <div class="text-muted mb-2">@currentUserStat.Email</div>

                            <div>
                                <span class="badge bg-primary">#@currentUserRank</span>
                            </div>
                        </div>
                        <hr class="my-0" />
                        <div class="card-body">
                            <h5 class="h6 card-title">@Localizer["Details"]</h5>
                            <ul class="list-unstyled mb-0">
                                <li class="mb-1"><span class="fas fa-clock fa-fw me-1"></span> @currentUserStat.WorkTime.TotalHours.ToString("N1") @Localizer["Hours"]</li>
                                <li class="mb-1"><span class="fas fa-code-branch fa-fw me-1"></span> @currentUserStat.CommitCount @Localizer["Commits"]</li>
                                <li class="mb-1"><span class="fas fa-calendar-check fa-fw me-1"></span> @currentUserStat.ContributionDays @Localizer["Active Days"]</li>
                            </ul>
                        </div>
                    </div>
            }
        </div>

        <div class="col-md-8 col-xl-9">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">@Localizer["Contributors"]</h5>
                </div>
                <div class="card-body h-100">
                    @foreach (var contributor in Model.Stats.Contributors)
                    {
                        var percentage = totalHours > 0 ? (contributor.WorkTime.TotalHours / totalHours) * 100 : 0;
                        var gravatarUrl = $"https://www.gravatar.com/avatar/{GetMd5Hash(contributor.Email)}?d=identicon";
                        var rank = Model.Stats.Contributors.IndexOf(contributor) + 1;

                            <div class="d-flex align-items-start">
                                <img src="@gravatarUrl" width="36" height="36" class="rounded-circle me-2" alt="@contributor.Name">
                                <div class="flex-grow-1">
                                    <small class="float-end text-muted">#@rank</small>
                                    <strong>@contributor.Name</strong>
                                    <br />
                                    <small class="text-muted">@contributor.Email</small>

                                    <div class="row mt-2">
                                        <div class="col-md-4">
                                            <span class="text-muted">@Localizer["Hours"]:</span> @contributor.WorkTime.TotalHours.ToString("N1")
                                        </div>
                                        <div class="col-md-4">
                                            <span class="text-muted">@Localizer["Commits"]:</span> @contributor.CommitCount
                                        </div>
                                        <div class="col-md-4">
                                            <span class="text-muted">@Localizer["Active Days"]:</span> @contributor.ContributionDays
                                        </div>
                                    </div>

                                    <div class="progress progress-sm mt-2">
                                        <div class="progress-bar bg-primary" role="progressbar" style="width: @percentage%" aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            </div>
                            <hr />
                    }
                </div>
            </div>
        </div>
    </div>
</div>
